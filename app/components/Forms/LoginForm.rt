<form id='login-form'>
  <div class='email-form'>
    <label>Email: </label>
    <input
      valueLink="{ this.linkState('email') }"
    />
  </div>

  <div class='password-form'>
    <label>Password: </label>
    <input
      type='password'
      valueLink="{ this.linkState('password') }"
    />
  </div>

  <button
    class='login'
    type='submit'
    onClick='{ this.handleSubmit }'
  >
    Login
  </button>

  <button
    class='register'
    onClick='{ this.handleRegister }'
  >
    Register
  </button>
</form>
